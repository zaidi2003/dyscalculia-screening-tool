{
  "name": "screening-tool",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "main.js",
  "description": "Dyscalculia Screening Tool",
  "author": "Ali Abbas",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "package": "electron-builder"
  },
  "dependencies": {
    "firebase": "^12.5.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/firebase": "^2.4.32",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "electron": "^39.2.6",
    "electron-builder": "^24.13.3",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "npm:rolldown-vite@7.1.14"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.14"
  },
  "build": {
    "appId": "com.example.screeningtool",
    "directories": {
      "buildResources": "public",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],

    "win": {
    "icon": "public/icon.ico",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"] 
      }
    ]
  },
    "mac": {
      "target": "dmg"
    }
  }
}
